@using Entities.Concrete
@model IEnumerable<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<title>Roles</title>
<div class="row">
    <div class="col-md-12">
        <div class="row m-2">
            <h2 class="col-md-2">Roles</h2>
             <a href="/Role/AddRole" class="btn btn-outline-primary col-md-1 float-end">Add New Role</a>
        </div>
        
        <hr />
           <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Id</th> 
                        <th>Name</th>
                        <th>Delete</th>
                        <th>Update</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td><a href="/Role/DeleteRole/@item.Id" class="btn btn-outline-primary">Delete</a></td>
                            <td><a href="/Role/UpdateRole/@item.Id" class="btn btn-outline-primary">Update</a></td>
                        </tr>
                    }
                </tbody>
            </table>
    </div>
</div>

