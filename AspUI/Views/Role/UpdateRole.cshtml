@model RoleViewModel
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<title>Update Role</title>
<form method="post" class="w-25 card container my-5">
    <h4 class="p-3">Update Role</h4>
    <hr />
    <div class="form-group p-3">
        <label>Id:</label>
        <input type="text" asp-for="Id" class="from-control float-end" disabled/>
    </div>
    <hr />
    <div class="form-group p-3">
        <label>Role Name:</label>
        <input type="text" asp-for="Name" class="from-control float-end"/>
    </div>
    <hr />
    <button type="submit" class="btn btn-primary float-end m-3">Update Role</button>
</form>

