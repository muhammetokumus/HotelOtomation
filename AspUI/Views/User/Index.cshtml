@using Entities.Concrete
@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<title>Users</title>
<div class="row">
    <div class="col-md-12">
        <div class="row m-2">
            <h2 class="col-md-2">Users</h2>
        </div>

        <hr />
           <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Id</th> 
                        <th>Name</th>
                        <th>Email</th>
                        <th>Username</th>
                        <th>Role</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name @item.Surname</td>
                                <td>@item.Email</td>
                                <td>@item.UserName</td>
                                <td><a href="/user/roleassign/@item.Id" class="btn btn-outline-primary">Change Role</a></td>
                                <td><a href="/user/delete/@item.Id" class="btn btn-outline-primary">Delete</a></td>
                            </tr>
                }
                </tbody>
            </table>
    </div>
</div>

