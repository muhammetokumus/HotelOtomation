<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/src/img/hotel-favicon.png">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>

<body class="bg-black bg-opacity-10" style="padding-bottom: 60px;">
    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/home/index">Hotel Otomation</a>
            @if (User.Identity.IsAuthenticated == true)
            {
                if (User.IsInRole("Admin"))
                {
                    <a href="/role/index"><button class="btn navbar-brand" type="submit">Role</button></a>
                    <a href="/user/index"><button class="btn navbar-brand" type="submit">User</button></a>
                    <a href="/hotel/index"><button class="btn navbar-brand" type="submit">Hotel</button></a>
                    <div class="d-flex me-2">
                        <a href="/Profile/index" class="btn btn-primary me-2 dropdown">@User.Identity.Name </a>
                        <a href="/account/LogOut"><button class="btn btn-primary me-2 dropdown">Logout</button></a>
                    </div>
                }
                else
                {
                    <a href="/home/hotels"><button class="btn navbar-brand" type="submit">Hotels</button></a>
                    <div class="d-flex me-2">
                        <a href="/Profile/index" class="btn btn-primary me-2 dropdown">@User.Identity.Name </a>
                        <a href="/account/LogOut"><button class="btn btn-primary me-2 dropdown">Logout</button></a>
                    </div>
                }
                
            }
            else
            {
                <a href="/home/hotels"><button class="btn navbar-brand" type="submit">Hotels</button></a>
                <div class="float-end">
                    <a href="/account/login"><button class="btn btn-primary me-2 dropdown">Login</button></a>
                    <a href="/account/signin"><button class="btn btn-primary me-2 dropdown">Sign In</button></a>
                </div>
            }
        </div>
    </nav>
    <main>
                @RenderBody()
    </main>
    <footer class="bg-primary text-center text-white fixed-bottom">
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            © 2022 Copyright:
            <a class="text-white" href="index">Hotel Otomation</a>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>