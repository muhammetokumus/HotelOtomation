@using Entities.Concrete
@model IEnumerable<Hotel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<title>Hotels</title>
<div class="row">
    <div class="col-md-12">
        <div class="row m-2">
            <h2 class="col-md-2">Hotels</h2>
             <a href="/hotel/create" class="btn btn-outline-primary col-md-2 float-end">Create New Hotel</a>
        </div>

        <hr />
           <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Id</th> 
                        <th>Name</th>
                        <th>City</th>
                        <th>Delete</th>
                        <th>Update</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.City</td>
                                <td><a href="/hotel/delete/@item.Id" class="btn btn-outline-primary">Delete</a></td>
                                <td><a href="/hotel/update/@item.Id" class="btn btn-outline-primary">Update</a></td>
                            </tr>
                }
                </tbody>
            </table>
    </div>
</div>

