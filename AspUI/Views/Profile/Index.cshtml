@using AspUI.Models
@model UserUpdateViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<title>Profile</title>
<div class="row m-2">
    <ul class="list-group col-md-2">
        <a href="/Profile/index" class="list-group-item">Edit Profile</a>
        <a href="/Profile/password" class="list-group-item">Change Password</a>
    </ul>
    <div class="col-md-5">
        <form method="post">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Name</label>
                    <input asp-for="Name" type="text" class="form-control" value="@Model.Name">
                </div>
                <div class="form-group col-md-6">
                    <label>Surname</label>
                    <input asp-for="Surname" type="text" class="form-control" value="@Model.Surname">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Email</label>
                    <input asp-for="Email" type="email" class="form-control" value="@Model.Email">
                </div>
            </div>
            <button type="submit" class="btn btn-primary mt-2">Update</button>
        </form>
    </div>
</div>


