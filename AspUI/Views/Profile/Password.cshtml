@using AspUI.Models
@model UserUpdateViewModel
@{
    ViewData["Title"] = "Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<title>Profile</title>
<div class="row m-2">
    <ul class="list-group col-md-2">
        <a href="/Profile/index" class="list-group-item">Edit Profile</a>
        <a href="/Profile/password" class="list-group-item">Change Password</a>
    </ul>
    <div class="col-md-4">
        <form method="post">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Password</label>
                    <input asp-for="Password" type="password" id="Pass" class="form-control" value="">
                    <div class="form-check float-end">
                        <i type="checkbox" name="accept" onClick="checkShow()" class="bi bi-eye"></i>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary mt-2">Update</button>
        </form>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
                crossorigin="anonymous">
</script>
<script>
    function checkShow() 
    {
        var x = document.getElementById("Pass");
        if (x.type === "password") 
        {
            x.type = "text";
        } 
        else 
        {
            x.type = "password";
        }
    }
</script>
